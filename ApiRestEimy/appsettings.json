{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": ".\\Log_{Date}.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [PerfilesPersona.Api] [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Common feature in WebApi demo"
    }
  },
  "AllowedHosts": "*"
}
